<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/addDialogPadding"
              android:theme="@style/AppTheme">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/source_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/field_hint_source"
            android:inputType="text"
            android:textSize="@dimen/text_size_common"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/row_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/translation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_common"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/translation_additional_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_common"/>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/row_user_variant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/user_translation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/field_hint_user_translation"
            android:inputType="text"
            android:textSize="@dimen/text_size_common"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
